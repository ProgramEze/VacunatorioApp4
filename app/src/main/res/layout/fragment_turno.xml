<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Agendar cita de vacunación"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DNI Paciente -->
    <TextView
        android:id="@+id/tvDNIPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DNI del paciente:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <EditText
        android:id="@+id/etDNIPaciente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DNI del paciente"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/ibCargarPaciente"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDNIPaciente" />

    <ImageButton
        android:id="@+id/ibCargarPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quantum_ic_search_grey600_24"
        app:layout_constraintBottom_toBottomOf="@+id/etDNIPaciente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etDNIPaciente" />

    <!-- Tipo de vacuna -->
    <TextView
        android:id="@+id/tvTipoDeVacuna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de vacuna:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDNIPaciente" />

    <Spinner
        android:id="@+id/spnTipoDeVacuna"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTipoDeVacuna" />

    <!-- DNI Tutor -->
    <TextView
        android:id="@+id/tvDNITutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI del tutor:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnTipoDeVacuna" />

    <EditText
        android:id="@+id/etDNITutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DNI del tutor"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/ibCargarTutor"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDNITutor" />

    <ImageButton
        android:id="@+id/ibCargarTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quantum_ic_search_grey600_24"
        app:layout_constraintBottom_toBottomOf="@+id/etDNITutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etDNITutor" />

    <!-- Relación Tutor -->
    <TextView
        android:id="@+id/tvRelacionTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relación del tutor:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDNITutor" />

    <Spinner
        android:id="@+id/spnRelacionTutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRelacionTutor" />

    <!-- Fecha y hora -->
    <TextView
        android:id="@+id/tvDiaYHoraCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha y hora de la cita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnRelacionTutor" />

    <TextView
        android:id="@+id/tvFechaCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de la cita:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDiaYHoraCita" />

    <EditText
        android:id="@+id/etdFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Seleccionar fecha"
        android:inputType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaCita" />

    <TextView
        android:id="@+id/tvHoraCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora de la cita:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etdFecha" />

    <Spinner
        android:id="@+id/spnHorarios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHoraCita" />

    <!-- Botones -->
    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar campos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnHorarios" />

    <Button
        android:id="@+id/btnCargarTurno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar turno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLimpiar" />

    <Button
        android:id="@+id/btnConfirmarCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Otorgar turno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCargarTurno" />

    <Button
        android:id="@+id/btnCancelarTurno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cancelar turno"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirmarCita" />

    <Button
        android:id="@+id/btnConfirmarAplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="77dp"
        android:text="Confirmar aplicación"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCancelarTurno" />

</androidx.constraintlayout.widget.ConstraintLayout>
