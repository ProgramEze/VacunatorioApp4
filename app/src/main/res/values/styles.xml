<resources>
    <!-- Botón redondeado -->
    <style name="Widget.VacunatorioApp4.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="cornerRadius">20dp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- EditText -->
    <style name="Widget.VacunatorioApp4.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.VacunatorioApp4.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="hintTextColor">@color/colorSecondaryText</item>
    </style>

    <style name="SpinnerItemStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorOnBackground</item> <!-- Color oscuro -->
    </style>

    <style name="SpinnerDropdownItemStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorOnBackground</item> <!-- Color oscuro -->
    </style>

    <style name="Theme.MiDatePicker" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnBackground</item>
    </style>

    <style name="SpinnerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Fondo del diálogo -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Color de texto -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Opcional: título del diálogo -->
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
